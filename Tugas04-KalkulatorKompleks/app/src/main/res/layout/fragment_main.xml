<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="id.ac.unsyiah.elektro.mobile.tugas04_kalkulatorkompleks.MainActivityFragment"
    tools:showIn="@layout/activity_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/bil_Real"
        android:id="@+id/txtBilReal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/bil_Imajiner"
        android:id="@+id/txtBilImajiner"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/angkaReal1"
        android:layout_below="@+id/txtBilReal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/txtBilReal"
        android:layout_alignEnd="@+id/txtBilReal" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/angkaImajiner1"
        android:layout_below="@+id/txtBilImajiner"
        android:layout_alignLeft="@+id/txtBilImajiner"
        android:layout_alignStart="@+id/txtBilImajiner"
        android:layout_alignRight="@+id/txtBilImajiner"
        android:layout_alignEnd="@+id/txtBilImajiner" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_below="@+id/angkaReal1"
        android:layout_height="wrap_content"
        android:id="@+id/radioGroup">

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Tambah"
        android:id="@+id/rdBtnTambah"
        android:layout_below="@+id/angkaReal1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Kurang"
        android:id="@+id/rdBtnKurang"
        android:layout_below="@+id/rdBtnTambah"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Kali"
        android:id="@+id/rdBtnKali"
        android:layout_below="@+id/rdBtnKurang"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RadioGroup>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/angkaReal2"
        android:layout_below="@+id/radioGroup"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/angkaReal1"
        android:layout_alignEnd="@+id/angkaReal1" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/angkaImajiner2"
        android:layout_alignBottom="@+id/angkaReal2"
        android:layout_alignLeft="@+id/angkaImajiner1"
        android:layout_alignStart="@+id/angkaImajiner1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:id="@+id/btnSamaDengan"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="onClickBtnSamaDengan" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Hasil"
        android:id="@+id/lblHasil"
        android:layout_below="@+id/btnSamaDengan"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp" />


</RelativeLayout>
